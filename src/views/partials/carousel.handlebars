<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        {{#each (apiCall "/recent-photos")}}
        <li data-target="#carouselExampleIndicators" data-slide-to={{@index}} class="{{#ifEquals @index 0}}active {{/ifEquals}}"></li>
        {{/each}}
    </ol>
    <div class="carousel-inner">
        {{#each (apiCall "/recent-photos")}}
        <div class="carousel-item {{#ifEquals @index 0}} active {{/ifEquals}}">

            <img class="d-block w-100" src={{this}} >

        </div>
        {{/each}}
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>